
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Headings Start -->
<div class="row justify-content-between align-items-center mb-10">

    <!-- Page Heading Start -->
    <div class="col-12 col-lg-auto mb-20">
        <div class="page-heading">
            <h3>فرم ثبت <span>/ عناصر پایه</span></h3>
        </div>
    </div><!-- Page Heading End -->

</div><!-- Page Headings End -->

<div class="row">

    <!--Form controls Start-->
    <div class="col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h3 class="title">مشخصات ثبت</h3>
            </div>
            <div class="box-body">
                <div class="row mbn-20">

                    <div class="col-lg-12 col-12 mb-30">
                        <label class="">نام / عنوان</label>
                        <input class="form-control" type="text" placeholder="نام / عنوان*">
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <label class="">نام مدیرعامل</label>
                        <input class="form-control" type="text" placeholder="نام مدیرعامل*">
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <label class="">شماره تماس</label>
                        <input class="form-control" type="text" placeholder="شماره تماس">
                    </div>
                    <div class="col-lg-12 col-12 mb-30">
                        <label class="">آدرس</label>
                        <textarea class="form-control" placeholder="آدرس"></textarea>
                    </div>
                    <div class="col-lg-12 col-12 mb-30">
                        <label class="">سایر توضیحات</label>
                        <textarea class="form-control" placeholder="سایر توضیحات"></textarea>
                    </div>
                    <div class="col-lg-12 col-12 mb-30">
                        <label class="">نوشته روی جواب</label>
                        <textarea class="summernote"></textarea>
                    </div>
                    <div class="col-lg-6 col-12 mb-30">
                        <label class="">بارگزاری لوگو</label>
                        <input class="dropify" type="file">
                    </div>
                </div>
            </div>
            <div class="box-foot">

            </div>
        </div>
    </div>
    <!--Form controls End-->
    <!--Form controls Start-->
    <div class="col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h3 class="title">مشخصات ثبت</h3>
            </div>
            <div class="box-body">
                <div class="row mbn-20">

                    <div class="col-lg-12 col-12 mb-30">
                        <label class="">رشته ای</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="col-lg-12 col-12 mb-30">
                        <label class="">عددی</label>
